@model PhamVanNhan441.Models.PVN0441

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa</h1>

<h4>Phạm Văn Nhân 0441</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PVNID" />
            <div class="form-group">
                <label asp-for="PVNName" class="control-label"></label>
                <input asp-for="PVNName" class="form-control" />
                <span asp-validation-for="PVNName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PVNGender" /> @Html.DisplayNameFor(model => model.PVNGender)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay Lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
